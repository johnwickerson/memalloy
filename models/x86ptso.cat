"X86"

include "basic_H.cat"
include "fr.cat"
acyclic po-loc | rf | fr | co as Uniproc
empty atom & (fre;coe) as AtomicRMW
  
let ppo = (W * W) & po | (R * M) & po

let LOCKED = domain(atom) | range(atom)
let implied = [LOCKED]; po | po; [LOCKED]

let hb = [F];po | po;[F] | implied | ppo | rfe | fr | co
acyclic hb as Order

empty (nvo & sloc) \ hb as NvoTso

let PE = W | PSYNC | PFENCE
let phb = [PSYNC | PFENCE]; hb; [PE]
let hbp = [PE]; hb; [PSYNC | PFENCE]
                     
empty (phb | hbp) \ nvo as NvoPsf
